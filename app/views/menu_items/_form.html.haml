.modal-dialog{:role => "document"}
  .modal-content
    = simple_form_for [@current_company,@terminal, @menu_item], remote: true do |f| 
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title New Menu Item 
      .modal-body
        = f.input :name, required: true
        = f.input :price, required: true
        = f.input :veg,requred: true,as: :radio_buttons
        = f.collection_check_boxes :active_days, [["Monday", 'Monday'] ,["Tuesaday", 'Tuesaday'],["Wednsday",'Wednsday'],["Thursday",'Thursday'],["Friday",'Friday']], :first, :last
        = f.input :available, required: true, as: :boolean
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "submit"} Add 