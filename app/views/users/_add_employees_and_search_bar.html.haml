.container
  .row
    .col-md-6.col-sm-6#add_employee_records
      %h4.text-center Add Employee Records
      .col-md-4.col-sm-4
        =link_to ' Add Multiple Records', import_company_users_path(@company), class: "btn btn-info", remote: true, "data-target" => "#import_employees", "data-toggle" => "modal", method: 'POST'
      .col-md-4.col-sm-4
        = link_to 'Add Single Record', new_company_user_path(@company), class: "btn btn-success", remote: true, "data-target" => "#user_form", "data-toggle" => "modal"
      .col-md-3.col-sm-1 
      .col-md-3.col-sm-2       
        = link_to 'Invalid Record',download_invalid_csv_company_path(@company)
      .col-md-3.col-sm-1
    .col-md-6.col-sm-6
      = form_tag({controller: "users", action:"search"}, method: "get") do
        = text_field_tag(:search_value)
        = submit_tag("Search")
        =link_to  "RESET",company_users_path(@company.id), :class=> "btn btn-warning", :id => "resetButton"
    .col-md-1.col-sm-1