.container
  -if !@users.empty?
    %h3.text-center Employee's Reports
    = link_to "Download_pdf", history_reports_users_path(:format => 'pdf'), class: "btn btn-success", id: "download_pdf"
    .table-responsive
      %table.table-hover.table-bordered
        %tbody
          %tr
            %th.text-center Sr No.
            %th.text-center Emp.ID
            %th.text-center Name
            %th.text-center
              TotalOrderPrice
              %h6.text-center (incl. of all taxes)
            %th.text-center SubsidyGiven
            %th.text-center Extra Charges
            %th.text-center
              CostToEmployee (CTE)
              %h6.text-center (incl. of all taxes)

          - @users.each_with_index do |user,i|
            %tr  
            %td.text-center= i+1
            %td.text-center= user.id
            %td.text-center= link_to user.name, history_reports_user_path(user) 
            %td.text-center ₹ #{user.total}
            %td.text-center ₹ #{user.subsidy}
            %td.text-center ₹ #{user.extra_charges}
            %td.text-center= round_of_total(user.total - user.subsidy + user.extra_charges)
  -else
    .alert.alert-danger
      No record is found!!