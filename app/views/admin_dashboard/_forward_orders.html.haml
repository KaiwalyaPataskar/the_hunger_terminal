.modal-dialog
  / Modal content
  .modal-content
    .modal-header 
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
      %h4.modal-title 
    .modal-body
      - if !@orders.any?
        %p today's orders have been already forawrded to terminals
      - else
        - if @terminal.email.blank?
          %table.table-bordered
            %th This terminal don't have an email id. You can contact him with this number:
            %tr
              %td #{@terminal.landline}  
        - else
          = label_tag :message, "Type your message:"
          %br
          = text_area_tag :message, @message, :size =>"60x5"
        %br
        .table-responsive
          %table.table-hover
            %tbody
              %tr
                / %th.text-center Employee
                %th.text-center Item
                %th.text-center Quantity
              - @orders.each do |order|
                %tr  
                / %td.text-center= order_detail.emp_name
                %td.text-center= order.menu
                %td.text-center= order.quantity
    .modal-footer
      - unless @terminal.email.blank?
        %a.button{ class: "btn btn-info", data: { terminal_id: params[:terminal_id], disable_with: "orders placed" } }Place Orders
      / = button_to "Place_orders", admin_dashboard_place_orders_path(:terminal_id =>params[:terminal_id]), :disabled => !@orders.any?, class: "btn btn-info"
      / = button_to "Close", data-dismiss: "modal"
      %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close