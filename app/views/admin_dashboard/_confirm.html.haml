.modal-dialog
  / Modal content
  .modal-content
    .modal-header 
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
      %h4.modal-title 
    .modal-body
      - if !@orders.any?
        %p No orders at this point of time
      - else
        .table-responsive
          %table.table-hover
            %tbody
              %tr
                / %th.text-center Employee
                %th.text-center Item
                %th.text-center Quantity
              -@orders.each do |order|
                %tr  
                / %td.text-center= order_detail.emp_name
                %td.text-center= order.menu
                %td.text-center= order.quantity
    .modal-footer
      %a.button{:href => admin_dashboard_place_orders_path(:terminal_id =>params[:terminal_id]), :disabled => !@orders.any?, class: "btn btn-info"}Place Orders
      / = button_to "Place_orders", admin_dashboard_place_orders_path(:terminal_id =>params[:terminal_id]), :disabled => !@orders.any?, class: "btn btn-info"
      / = button_to "Close", data-dismiss: "modal"
      %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close