.modal-dialog{:role => "document"}
  .modal-content
    = simple_form_for @terminal, remote: true do |f| 
      .modal-header
        %h4.modal-title.text-center Pay to #{@terminal.name}
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        = f.input :payment_made, required: true
        / = f.input :active_days, as: :check_boxes, collection: active_days_collection, :item_wrapper_class => 'inline', include_hidden: false
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "submit"} Pay
