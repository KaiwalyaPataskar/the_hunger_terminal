#indexcontainer
  .table-responsive
    %table.table-hover
      %tbody
        %tr
          %th.text-center Sr No.
          %th.text-center Name
          %th.text-center Landline
        -@selected_terminals.each_with_index do |terminal,i|
          %tr  
          %td.text-center= i+1
          %td.text-center= link_to terminal.name, terminal_path(terminal.id)
          %td.text-center= terminal.landline