.modal-dialog
  / Modal content
  .modal-content
    .modal-header 
      %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
      %h4.modal-title 
    .modal-body
      .table-responsive
        %table.table-hover
          %tbody
            %tr
              / %th.text-center Employee
              %th.text-center Item
              %th.text-center Quantity
            -@orders.each do |order|
              %tr  
              / %td.text-center= order_detail.emp_name
              %td.text-center= order.menu
              %td.text-center= order.quantity
    .modal-footer
      = link_to "Place_orders", custom_actions_place_orders_path(:terminal_id =>params[:terminal_id]), class: "btn btn-info"
      / %button.btn.btn-default{:type => "button"} Place Orders, custom_actions
      %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close